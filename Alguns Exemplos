1 exemplo 

using System;
using System.Globalization;

namespace segundo_programa {
    class Program {
        static void Main(string[] args) {
            
            int x, y;

            x = 5;

            y = 2 * x;

            Console.WriteLine(x);
            Console.WriteLine(y);

            Console.ReadLine();
        }
    }
}

